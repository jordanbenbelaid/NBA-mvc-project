@model NBA_MVC_website.Models.Player

@{
    ViewData["Title"] = "Edit";
}

    <style>
        body {
            background-color: #478af5;
            color: white;
        }
    </style>

<h1>Edit</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
